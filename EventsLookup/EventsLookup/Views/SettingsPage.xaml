<Page
    x:Class="EventsLookup.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventsLookup.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    RequestedTheme="Light"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ThemeGrayLow3ColorBrush}">
        <StackPanel Margin="16">
            <TextBlock Text="OAuth Key" Margin="0,0,0,4"/>
            <PasswordBox x:Name="passwordBox" Width="400" HorizontalAlignment="Left" Password="YourApiKey" PasswordRevealMode="Peek" Margin="0,0,0,4"/>
            <Button Content="Save" Width="200" Background="{ThemeResource ThemeRedHigh1ColorBrush}" RequestedTheme="Dark"/>
            <WebView x:Name="Test" Width="400" Height="600"/>
            <Button Content="Login" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
